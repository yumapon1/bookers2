<div class="container">
 <div class= "col-md-3">
    <h2>User info</h2>

 <% if @user.profile_image.attached? %>
    <%= image_tag @user.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>

<table class = "table">
<tbody>
  <tr></tr>
  <tr>
    <th>name</th>
   <th> <%= @user.name %></th>
    </tr>

    <tr>
    <th>introduction</th>
    <th><%= @user.introduction %>
    </th>

  </tr>
  </tbody>
</table>

<div class = "row">
<%= link_to"edit user",edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>

</div>





<h2>New book</h2>


<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

 <div class= "botton">
<%= f.submit 'Create Book' %>
</div>
<% end %>
</div>

<h2>Books</h2>


 <table>
   <thead>
     <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
     </tr>
     </thead>
     <tbody>
       <% @books.each do |book| %>
       <tr>
       <td><%= link_to user_path(book.user_id) do %>
        <% if @user.profile_image.attached? %>
    <%= image_tag @user.image, size: "30x300" %>
  <% else %>
    <%= image_tag 'no_image', size: "30x30" %>
  <% end %>


      <% end %>

      <td><%=link_to book.title, book_path(book.id)%></td>
      <td><%= book.body %></td>
      </tr>
      <% end %>

     </tbody>
 </table>
</div>