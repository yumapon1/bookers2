
<div class = "container">
  <div class ="row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
<h1>User info</h1>
 <% if @user.errors %>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

<%= form_with model: @user, local:true do |f| %>

<div class = "form-group">
  <label>Name</label><br>
  <%= f.text_field :name %><br>
  </div>

  <div class = "form-group">
   <label>Image</label><br>
  <%= f.file_field :profile_image, accept: "image/*" %><br>
 </div>

 <div class = "form-group">
  <label>Introduction</label><br>
  <%= f.text_area :Introduction%><br>
  </div>

<div class = "form-group">
  <%= f.submit 'Update User' %>
  </div>

<% end %>
</div>
</div>
</div>