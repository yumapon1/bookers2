<div class="box">

  <div class= "col-md-3">
    <h2>User info</h2>

 <% if @user.profile_image.attached? %>
    <%= image_tag @user.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>

<table class = "table">
<tbody>
  <tr></tr>
  <tr>
    <th>name</th>
   <th> <%= @user.name %></th>
    </tr>

    <tr>
    <th>introduction</th>
    <th><%= @user.introduction %>
    </th>

  </tr>
  </tbody>
</table>

<div class = "row">
<%= link_to"edit user",edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>

</div>


  <%= form_for(@book,  url: books_path) do |f| %>
    <h2 class = "mt-3">New book</h2>
    <% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
    <div class = "form-group">
      <label>Title</label><br>
    <%= f.text_field :title,class: "col-xs-12" %>
    </div>
    <div class = "form-group">
    <label>Opinipn</label><br>
    <%= f.text_field :body,class: "col-xs-12" %>
    </div>
    <div class = "form-group">

        <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>

    <% end %>
    </div>


<div class = "col-md-8 odffset-md-1">
<h2>Users</h2>
 <table class = "table">
   <thead>
     <tr>
       <th>image</th>
       <th>name</th>
       <th colspan= "3"></th>
     </tr>
     </thead>
     <tbody>
<% @users.each do |user| %>
<tr>

<td><% if @user.profile_image.attached? %>
    <%= image_tag @user.image, size: "30x30" %>
  <% else %>
    <%= image_tag 'no_image', size: "30x30" %>
  <% end %></td>
<td><%= user.name %></td>

<td><%= link_to"Show",user_path(user.id) %></td>
</tr>
<% end %>

</tbody>
</table>
</div>